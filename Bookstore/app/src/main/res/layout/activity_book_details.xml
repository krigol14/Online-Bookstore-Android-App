<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="#f5ecfe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="709dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="0dp"
            android:text="title"
            android:textColor="#0F0F0F"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/row_image"
            android:layout_width="183dp"
            android:layout_height="181dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="240dp" />

        <TextView
            android:id="@+id/row_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="60dp"
            android:text="price"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isbn_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="90dp"
            android:text="ISBN: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_isbn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="90dp"
            android:text="isbn"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="114dp"
            android:text="@string/available_quantity"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_quantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="278dp"
            android:layout_marginTop="114dp"
            android:text="nr"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cart_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="149dp"
            android:background="@drawable/ic_add_shopping_cart_black_24dp"
            android:text=""
            android:textColor="#F0DA96" />

        <Button
            android:id="@+id/arrow_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="142dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_up_24"
            android:text=""
            android:textColor="#F0DA96" />

        <Button
            android:id="@+id/arrow_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="161dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:text=""
            android:textColor="#F0DA96" />

        <TextView
            android:id="@+id/quantity_wanted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="155dp"
            android:text="1"
            android:textSize="17sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="200dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/row_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="15sp" />

    </ScrollView>

</androidx.cardview.widget.CardView>
